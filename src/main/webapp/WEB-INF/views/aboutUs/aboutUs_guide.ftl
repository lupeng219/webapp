    <script type="text/javascript">
        $("#main-nav .nLi").eq(4).addClass("current").siblings().removeClass("current");
        var $btnLeft=$(".btnLeft"),
            $btnRight=$(".btnRight"),
            $steps=$(".steps"),
            $Step=$(".Step"),
            $stepDone=$(".step-done"),
            Index=0;
            
            $btnLeft.on('click',function(){
                if(Index<0){
                    Index=0;
                }else{
                    Index--;
                } 
                IndexT(Index);
            });
            $btnRight.on('click',function(){
                if(Index>2){
                    Index=2; 
                }else{
                    Index++;
                }
                
                IndexT(Index);
            });
            function IndexT(Index){
                $stepDone.hide();
                $Step.hide();
                $stepDone.eq(0).show();
                $steps.hide();
                $btnRight.show();
                $btnLeft.show();
               if(Index==1){
                    $stepDone.eq(Index).show();
                    $Step.eq(Index).show();
                    $steps.eq(Index).show();
               }else if(Index==2){
                    $stepDone.eq(Index-1).show();
                    $stepDone.eq(Index).show();
                    $btnRight.hide();
                    $steps.eq(Index).show();
               }else if(Index==0){
                  $Step.eq(Index).show();
                  $Step.eq(Index+1).show();
                  $btnLeft.hide();
                  $steps.eq(Index).show();
               }
            }
    </script>
